<script type="text/javascript" src="http://echarts.baidu.com/gallery/vendors/echarts/echarts.min.js"></script>

<script type="text/javascript">
    $("#addTask").on("click", function () {
        $.post("/api/tasks",
            {
                ProjectId: $("#project").val(),
                task_description: $("#desc").val(),
                status: $("#status").val(),
                AssignedTo_Id: $("#assignTo").val(),
                due_date: $("#due-date-input").val(),
                createdBy_id: {{ user.id }}
            }
    );
    });

    $.ajax({
        url: "/api/dashboard/getCountByProject"
    }).done(function (result) {
        var dom = document.getElementById("graph1");
        var myChart = echarts.init(dom);
        var app = {};
        var option = {
            title: {
                text: 'Task Counts Per Project',
                x: 'center'
            },
            tooltip: {
                trigger: 'item',
                formatter: "{a} <br/>{b} : {c} ({d}%)"
            },
            series: [
                {
                    name: 'Status',
                    type: 'pie',
                    radius: '55%',
                    center: ['50%', '60%'],
                    data: result,
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                    }
                }
            ]
        };
        if (option && typeof option === "object") {
            myChart.setOption(option, true);
        }
    });
    $.ajax({
        url: "/api/dashboard/getCountByStatus"
    }).done(function (result) {
        var dom = document.getElementById("graph2");
        var myChart = echarts.init(dom);
        var app = {};
        var option = {
            title: {
                text: 'Task Counts Per Status',
                x: 'center'
            },
            tooltip: {
                trigger: 'item',
                formatter: "{a} <br/>{b} : {c} ({d}%)"
            },
            series: [
                {
                    name: 'Status',
                    type: 'pie',
                    radius: '55%',
                    center: ['50%', '60%'],
                    data: result,
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                    }
                }
            ]
        };
        if (option && typeof option === "object") {
            myChart.setOption(option, true);
        }
    });
    $.ajax({
        url: "/api/dashboard/getCountByCreator"
    }).done(function (result) {
        var dom = document.getElementById("graph3");
        var myChart = echarts.init(dom);
        var app = {};
        var option = {
            title: {
                text: 'Task Count Per Creator',
                x: 'center'
            },
            tooltip: {
                trigger: 'axis',
                axisPointer: {
                    type: 'shadow'
                }
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            xAxis: {
                type: 'value',
                boundaryGap: [0, 0.01]
            },
            yAxis: {
                type: 'category',
                data: result[0]
            },
            series:
                {
                    name: 'Task Count',
                    type: 'bar',
                    data: result[1]
                }
        };
        if (option && typeof option === "object") {
            myChart.setOption(option, true);
        }
    });
    $.ajax({
        url: "/api/dashboard/getCountByDue"
    }).done(function (result) {
        var dom = document.getElementById("graph4");
        var myChart = echarts.init(dom);
        var app = {};
        var option = {
            color: ['#3398DB'],
            title: {
                text: 'Tasks Count By Due Date',
                x: 'center'
            },
            tooltip: {
                trigger: 'axis',
                axisPointer: {
                    type: 'line'
                }
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            xAxis: [
                {
                    type: 'category',
                    data: result[0],
                    axisTick: {
                        alignWithLabel: true
                    }
                }
            ],
            yAxis: [
                {
                    type: 'value'
                }
            ],
            series: [
                {
                    name: 'Task Count',
                    type: 'bar',
                    barWidth: '60%',
                    data: result[1]
                }
            ]
        };
        if (option && typeof option === "object") {
            myChart.setOption(option, true);
        }
    });
</script>

